<Window x:Class="HardwareMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hardware Monitor" 
        Height="450" 
        Width="400"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        Topmost="True"
        Opacity="0.8">

    <Border Background="Black" CornerRadius="10" Padding="10">
        <StackPanel>
            <TextBlock x:Name="textBlockHardwareInfo" 
                       Foreground="White" 
                       FontSize="14" 
                       TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
